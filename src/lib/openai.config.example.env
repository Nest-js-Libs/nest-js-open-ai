# Configuración de OpenAI

# API Key de OpenAI (obligatorio)
OPENAI_API_KEY=tu_api_key_aqui

# ID de organización de OpenAI (opcional)
OPENAI_ORGANIZATION=tu_id_de_organizacion

# Modelo predeterminado a utilizar
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# Configuración predeterminada para las solicitudes
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_TOP_P=1
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0

# Tiempo de espera para las solicitudes en milisegundos
OPENAI_TIMEOUT=30000

# Número máximo de reintentos para solicitudes fallidas
OPENAI_MAX_RETRIES=3